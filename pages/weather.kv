#:import dp kivy.metrics.dp

<WeatherScreen>:
    name: "weather"
    
    BoxLayout:
        orientation: 'vertical'
        padding: [dp(16), dp(16), dp(16), dp(16)]
        spacing: dp(12)
        
        # Верхний блок: внешняя погода и датчики комнаты
        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(16)
            size_hint_y: 0.5
            
            # Левая часть: внешняя погода
            OverlayCard:
                size_hint_x: 0.4
                padding: [dp(16), dp(16)]
                
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(12)
                    padding: [dp(32),dp(8)]
                    
                    # Температура (большая)
                    Label:
                        id: current_temp_label
                        text: root.current_temp
                        font_size: '72sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("primary")
                        size_hint_y: None
                        height: dp(88)
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                    
                    # Условие погоды
                    Label:
                        id: current_condition_label
                        text: root.current_condition
                        font_size: '28sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text")
                        size_hint_y: None
                        height: dp(36)
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                    
                    # Вероятность дождя
                    Label:
                        id: current_precipitation_label
                        text: root.current_precipitation
                        font_size: '20sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_y: None
                        height: dp(32)
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
            
            # Правая часть: датчики комнаты
            OverlayCard:
                size_hint_x: 0.6
                padding: [dp(16), dp(16)]
                
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(12)
                    padding: [dp(32),dp(8)]
                    
                    # ИЗМЕНЕНО: Температура и влажность с раздельными цветами
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: dp(64)
                        
                        # "Room:" - обычный цвет
                        Label:
                            id: sensor_room_label
                            text: root.sensor_room_text
                            font_size: '32sp'
                            font_name: app.theme_manager.get_font("main")
                            color: app.theme_manager.get_rgba("text")
                            size_hint_x: None
                            width: self.texture_size[0]
                            halign: 'left'
                            valign: 'middle'
                        
                        # Значение температуры - цвет по условию
                        Label:
                            id: sensor_temp_label
                            text: root.sensor_temp_text
                            font_size: '32sp'
                            font_name: app.theme_manager.get_font("main")
                            color: app.theme_manager.get_rgba("primary")
                            size_hint_x: None
                            width: self.texture_size[0]
                            halign: 'left'
                            valign: 'middle'
                        
                        # ", Humidity: " - обычный цвет
                        Label:
                            id: sensor_comma_label
                            text: root.sensor_comma_text
                            font_size: '32sp'
                            font_name: app.theme_manager.get_font("main")
                            color: app.theme_manager.get_rgba("text")
                            size_hint_x: None
                            width: self.texture_size[0]
                            halign: 'left'
                            valign: 'middle'
                        
                        # Процент влажности - цвет по условию
                        Label:
                            id: sensor_humidity_label
                            text: root.sensor_humidity_text
                            font_size: '32sp'
                            font_name: app.theme_manager.get_font("main")
                            color: app.theme_manager.get_rgba("text")
                            size_hint_x: None
                            width: self.texture_size[0]
                            halign: 'left'
                            valign: 'middle'
                    
                    # CO2 и TVOC в одной строке
                    Label:
                        id: sensor_co2_tvoc_label
                        text: root.sensor_co2_tvoc
                        font_size: '24sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("primary")
                        size_hint_y: None
                        height: dp(32)
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                    
                    # Качество воздуха
                    Label:
                        id: sensor_air_quality_label
                        text: root.sensor_air_quality
                        font_size: '24sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("primary")
                        size_hint_y: None
                        height: dp(32)
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
        
        # Нижний блок: недельный прогноз
        OverlayCard:
            size_hint_y: 0.5
            padding: [dp(16), dp(16)]
            
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(8)
                
                # Заголовки колонок
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(24)
                    spacing: dp(8)
                    padding: [dp(8), 0]
                    
                    Label:
                        text: "Day"
                        font_size: '16sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_x: 0.05
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                    
                    Label:
                        text: "Temp"
                        font_size: '16sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_x: 0.15
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                    
                    Label:
                        text: "Condition"
                        font_size: '16sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_x: 0.55
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                    
                    Label:
                        text: "Rain"
                        font_size: '16sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_x: 0.25
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                
                # Контейнер для прокрутки прогноза
                BoxLayout:
                    canvas.before:
                        Color:
                            rgba: app.theme_manager.get_rgba("overlay_card", 0.3)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(4)]
                    
                    ScrollView:
                        id: weekly_scroll
                        do_scroll_x: False
                        do_scroll_y: True
                        scroll_type: ['content', 'bars']
                        bar_width: dp(8)
                        bar_color: app.theme_manager.get_rgba("text_secondary", 0.7)
                        bar_inactive_color: app.theme_manager.get_rgba("text_secondary", 0.3)
                        effect_cls: "DampedScrollEffect"
                        
                        BoxLayout:
                            id: weekly_forecast_container
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: dp(4)
                            padding: [dp(4), dp(4)]