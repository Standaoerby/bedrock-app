#:import dp kivy.metrics.dp

<ScheduleScreen>:
    name: "schedule"
    
    BoxLayout:
        orientation: 'vertical'
        padding: [dp(16), dp(16), dp(16), dp(16)]
        spacing: dp(8)

        # Заголовок с информацией о неделе
        OverlayCard:
            size_hint_y: None
            height: dp(56)
            padding: [dp(16), dp(8)]
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(16)
                
                Label:
                    id: title_label
                    text: root.user_header
                    font_size: '20sp'
                    font_name: app.theme_manager.get_font("title")
                    color: app.theme_manager.get_rgba("primary")
                    size_hint_x: 0.6
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                
                Label:
                    id: week_label
                    text: root.current_week_str
                    font_size: '16sp'
                    font_name: app.theme_manager.get_font("main")
                    color: app.theme_manager.get_rgba("text")
                    size_hint_x: 0.4
                    halign: 'right'
                    valign: 'middle'
                    text_size: self.size

        # ИСПРАВЛЕНО: Компактный блок расписания
        OverlayCard:
            padding: [dp(8), dp(8)]  # Уменьшили общие отступы карточки
            
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(4)  # Уменьшили spacing
                
                # ИСПРАВЛЕНО: Компактные заголовки дней недели
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(4)  # Уменьшили spacing между заголовками
                    size_hint_y: None
                    height: dp(20)  # ИСПРАВЛЕНО: Уменьшили с dp(32) до dp(20)
                    padding: [dp(2), 0]  # Минимальный padding
                    
                    Label:
                        text: "MON"
                        font_size: '12sp'  # Уменьшили шрифт
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_x: 0.2
                        halign: 'center'
                        valign: 'middle'
                        bold: True
                    
                    Label:
                        text: "TUE"
                        font_size: '12sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_x: 0.2
                        halign: 'center'
                        valign: 'middle'
                        bold: True
                    
                    Label:
                        text: "WED"
                        font_size: '12sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_x: 0.2
                        halign: 'center'
                        valign: 'middle'
                        bold: True
                    
                    Label:
                        text: "THU"
                        font_size: '12sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_x: 0.2
                        halign: 'center'
                        valign: 'middle'
                        bold: True
                    
                    Label:
                        text: "FRI"
                        font_size: '12sp'
                        font_name: app.theme_manager.get_font("main")
                        color: app.theme_manager.get_rgba("text_secondary")
                        size_hint_x: 0.2
                        halign: 'center'
                        valign: 'middle'
                        bold: True
                
                # ИСПРАВЛЕНО: Компактный контейнер для расписания
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_width: dp(6)  # Уменьшили ширину скроллбара
                    bar_color: app.theme_manager.get_rgba("primary")
                    bar_inactive_color: app.theme_manager.get_rgba("text_secondary")
                    scroll_y: 1
                    effect_cls: "DampedScrollEffect"
                    
                    BoxLayout:
                        id: schedule_container
                        orientation: 'horizontal'
                        spacing: dp(2)  # ИСПРАВЛЕНО: Уменьшили spacing между колонками
                        size_hint_y: None
                        height: max(self.minimum_height, self.parent.height - dp(8))
                        padding: [dp(2), dp(2)]  # ИСПРАВЛЕНО: Минимальный padding

        # Нижняя панель
        OverlayCard:
            size_hint_y: None
            height: dp(48)
            padding: [dp(16), dp(8)]
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(16)
                
                Label:
                    text: "Today:"
                    font_size: '14sp'
                    font_name: app.theme_manager.get_font("main")
                    color: app.theme_manager.get_rgba("text")
                    size_hint_x: None
                    width: dp(48)
                    halign: 'left'
                    valign: 'middle'
                
                Label:
                    id: today_date_label
                    text: root.today_full_date if root.today_full_date else "Unknown date"
                    font_size: '16sp'
                    font_name: app.theme_manager.get_font("main")
                    color: app.theme_manager.get_rgba("primary")
                    halign: 'left'
                    valign: 'middle'
                    bold: True
                    size_hint_x: 0.6
                    text_size: self.size
                    
                Widget:
                    size_hint_x: 0.1
                    
                Label:
                    id: weekend_info_label
                    text: root.next_weekend_text
                    font_size: '14sp'
                    font_name: app.theme_manager.get_font("main")
                    color: app.theme_manager.get_rgba("text_secondary")
                    halign: 'right'
                    valign: 'middle'
                    size_hint_x: 0.3
                    text_size: self.size