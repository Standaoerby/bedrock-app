#:import dp kivy.metrics.dp

<ScheduleScreen>:
    name: "schedule"
    
    BoxLayout:
        orientation: 'vertical'
        padding: [dp(16), dp(16), dp(16), dp(16)]
        spacing: dp(8)

        # Заголовок с информацией о неделе
        OverlayCard:
            size_hint_y: None
            height: dp(56)
            padding: [dp(16), dp(8)]
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(16)
                
                Label:
                    id: title_label
                    text: root.user_header
                    font_size: '20sp'
                    font_name: app.theme_manager.get_font("title")
                    color: app.theme_manager.get_rgba("primary")
                    size_hint_x: 0.6
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                
                Label:
                    id: week_label
                    text: root.current_week_str
                    font_size: '16sp'
                    font_name: app.theme_manager.get_font("main")
                    color: app.theme_manager.get_rgba("text")
                    size_hint_x: 0.4
                    halign: 'right'
                    valign: 'middle'
                    text_size: self.size

        # Основное расписание
        OverlayCard:
            padding: [dp(16), dp(16)]
            
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(8)
                
                # УБРАНО: Заголовки дней недели больше не отображаются

                # Контейнер для расписания с правильными настройками прокрутки
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_width: dp(8)
                    bar_color: app.theme_manager.get_rgba("primary")
                    bar_inactive_color: app.theme_manager.get_rgba("text_secondary")
                    # Устанавливаем скролл в начало
                    scroll_y: 1
                    effect_cls: "DampedScrollEffect"
                    
                    BoxLayout:
                        id: schedule_container
                        orientation: 'horizontal'
                        spacing: dp(8)
                        size_hint_y: None
                        # Правильный расчёт высоты контента
                        height: max(self.minimum_height, self.parent.height - dp(16))
                        padding: [0, dp(8), 0, dp(8)]

        # Нижняя панель с дополнительной информацией
        OverlayCard:
            size_hint_y: None
            height: dp(48)
            padding: [dp(16), dp(8)]
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(16)
                
                Label:
                    text: "Today:"
                    font_size: '14sp'
                    font_name: app.theme_manager.get_font("main")
                    color: app.theme_manager.get_rgba("text")
                    size_hint_x: None
                    width: dp(48)
                    halign: 'left'
                    valign: 'middle'
                
                Label:
                    id: today_highlight_label
                    text: root.today_day if root.today_day else "Weekend"
                    font_size: '16sp'
                    font_name: app.theme_manager.get_font("main")
                    color: app.theme_manager.get_rgba("primary")
                    halign: 'left'
                    valign: 'middle'
                    bold: True
                    
                Widget:
                    # Spacer
                    
                Label:
                    text: "Next: Math at 09:00"
                    font_size: '14sp'
                    font_name: app.theme_manager.get_font("main")
                    color: app.theme_manager.get_rgba("text_secondary")
                    halign: 'right'
                    valign: 'middle'
                    text_size: self.size