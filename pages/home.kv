#:import dp kivy.metrics.dp

<HomeScreen>:
    name: "home"

    BoxLayout:
        orientation: 'vertical'
        padding: [dp(16), dp(16), dp(16), dp(16)]
        spacing: dp(12)

        # Верхний блок: дата слева, будильник справа
        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(24)
            size_hint_y: None
            height: dp(64)

            # Дата слева
            OverlayCard:
                size_hint_x: 0.35
                padding: [0]
                Label:
                    id: date_label
                    text: root.current_date
                    font_size: '24sp'
                    padding: [dp(32), dp(0), dp(8), dp(0)]
                    color: [1, 1, 1, 1]
                    halign: 'left'
                    text_size: self.size

            BoxLayout:
                size_hint_x: 0.35
                Label:
                    text: ""
                    size_hint: None, None
                    size: dp(1), dp(1)

            # Будильник справа
            OverlayCard:
                size_hint_x: 0.30
                padding: [0]

                BoxLayout:
                    padding: [0]
                    orientation: 'horizontal'
                    BoxLayout:
                        size_hint_x: 0.65
                        padding: [0]

                        Label:
                            id: alarm_time_label
                            text: root.current_alarm_time
                            font_size: '32sp'
                            padding: [dp(8), dp(0), dp(4), dp(8)]
                            size_hint_y: 0.7
                            color: [1, 1, 1, 1]
                            halign: 'center'
                            valign: 'middle'
                            text_size: self.size

                    Button:
                        id: alarm_toggle_btn
                        text: root.alarm_status_text
                        font_size: '16sp'
                        padding: [dp(0)]
                        color: [1, 1, 1, 1]
                        background_normal: ""
                        background_down: ""
                        size_hint_x: 0.35
                        on_release: root.toggle_alarm()

        # Центральный блок с большими часами и тенью
        
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'center'
            padding: [0, 0, dp(144), 0]            

            FloatLayout:
                size_hint: None, None
                size: dp(336), dp(180)
                

                # Тени часов (многослойные для эффекта глубины)
                Label:
                    id: clock_shadow3
                    text: root.clock_time
                    font_size: '192sp'
                    color: (0, 0, 0, 0.1)
                    size_hint: None, None
                    size: self.texture_size
                    pos: self.parent.center[0] - self.width/2 + dp(8), self.parent.center[1] - self.height/2 - dp(6)
                    halign: 'center'
                    valign: 'middle'

                Label:
                    id: clock_shadow2
                    text: root.clock_time
                    font_size: '192sp'
                    color: (0, 0, 0, 0.2)
                    size_hint: None, None
                    size: self.texture_size
                    pos: self.parent.center[0] - self.width/2 + dp(6), self.parent.center[1] - self.height/2 - dp(4)
                    halign: 'center'
                    valign: 'middle'

                Label:
                    id: clock_shadow1
                    text: root.clock_time
                    font_size: '192sp'
                    color: (0, 0, 0, 0.3)
                    size_hint: None, None
                    size: self.texture_size
                    pos: self.parent.center[0] - self.width/2 + dp(4), self.parent.center[1] - self.height/2 - dp(2)
                    halign: 'center'
                    valign: 'middle'

                # Основные часы (белого цвета)
                Label:
                    id: clock_label
                    text: root.clock_time
                    font_size: '192sp'
                    color: (1, 1, 1, 1)
                    size_hint: None, None
                    size: self.texture_size
                    pos: self.parent.center[0] - self.width/2, self.parent.center[1] - self.height/2
                    halign: 'center'
                    valign: 'middle'

        # Блок погоды
        OverlayCard:
            size_hint_y: None
            height: dp(64)
            padding: [0,dp(8),0,0]
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5}
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(16)
                padding: [0]

                # Сейчас
                Label:
                    id: weather_now_label
                    text: root.weather_now_str
                    font_size: '24sp'
                    color: [1, 1, 1, 1]
                    size_hint_x: 0.455
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

                # Стрелка тренда
                Label:
                    id: weather_trend_label
                    text: root.weather_trend_arrow
                    font_size: '24sp'
                    color: [1, 1, 1, 1]
                    size_hint_x: 0.1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

                # Через 5 часов
                Label:
                    id: weather_5h_label
                    text: root.weather_5h_str
                    font_size: '24sp'
                    color: [1, 1, 1, 1]
                    size_hint_x: 0.45
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

        # Нижний блок с уведомлениями - бегущая строка
        OverlayCard:
            size_hint_y: None
            height: dp(40)
            
            # Контейнер для бегущей строки
            FloatLayout:
                id: notification_container
                padding: [dp(16), dp(4)]
                
                # Текст уведомлений
                Label:
                    id: notification_text_label
                    text: root.notification_text
                    font_size: '16sp'
                    color: [1, 1, 1, 1]
                    size_hint: None, None
                    size: self.texture_size if self.texture_size[0] > 0 else (dp(100), dp(32))
                    pos: self.parent.x + root.notification_scroll_x, self.parent.center_y - self.height/2
                    halign: 'center'
                    valign: 'middle'